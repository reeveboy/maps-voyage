generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Destination {
  id            String  @id @default(uuid())
  place         String
  numberOfTours Int?
  banner        String
  images        String
  description   String?
  tours         Tour[]
  featured      Boolean @default(false)
}

model Tour {
  id          String @id @default(uuid())
  name        String
  description String
  images      String
  price       Int?
  duration    Int
  groupSize   Int
  category    String
  rating      Float

  destinationId String
  destination   Destination @relation(fields: [destinationId], references: [id])

  overview String
  tourDays TourDay[]
  featured Boolean   @default(false)
}

model TourDay {
  id          String @id @default(uuid())
  dayNumber   Int
  dayTitle    String
  description String
  tourId      String
  tour        Tour   @relation(fields: [tourId], references: [id])
}
